groups:
  - name: example_alerts
    rules:
      - alert: HighCpuUsage
        expr: avg by (instance)(rate(node_cpu_seconds_total{mode="user"}[5m])) > 0.7
        for: 5m
        labels:
          severity: critical
        annotations:
          summary: "High CPU usage detected on {{ $labels.instance }}"
      - alert: HighMemoryUsage
        expr: avg by (instance)(node_memory_MemAvailable_bytes / node_memory_MemTotal_bytes) < 0.3
        for: 5m
        labels:
          severity: critical
        annotations:
          summary: "High memory usage detected on {{ $labels.instance }}"

